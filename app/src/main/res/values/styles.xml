<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightGray</item>

    </style>

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeaderOneTextStyle">
        <item name="android:textColor">@color/textHeader</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTwoTextStyle">
        <item name="android:textColor">@color/textHeader</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewButtonStyle">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
