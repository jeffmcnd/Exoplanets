<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".screens.planets.PlanetsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/planetsRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/toolbarView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/toolbarView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <com.aidanlaing.exoplanets.common.views.ErrorView
        android:id="@+id/errorView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/toolbarView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <View
        android:id="@+id/toolbarView"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbarHeight"
        android:theme="@style/ViewToolbarStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/favouritesTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbarHeight"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_heart_filled_white_24dp"
        android:text="@string/favourites"
        android:theme="@style/TextViewActionButtonStyle"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarView"
        app:layout_constraintRight_toLeftOf="@+id/searchTv"
        app:layout_constraintTop_toTopOf="@+id/toolbarView" />

    <TextView
        android:id="@+id/searchTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbarHeight"
        android:drawableStart="@drawable/ic_search_white_24dp"
        android:text="@string/search"
        android:theme="@style/TextViewActionButtonStyle"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarView" />

</android.support.constraint.ConstraintLayout>